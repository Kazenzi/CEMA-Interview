<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LiterateFragment">
    <TextView
        android:layout_marginTop="33dp"
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="34dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sc" />
    <Button
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="Symptom Check"
        android:onClick="startSymptomChecker"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="34dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/info" />
        <Button
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="Information"
            android:onClick="startInformationViewer"
            android:textSize="23sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="34dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/specialist" />
        <Button
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="Get Specialist"
            android:onClick="startGetSpecialist"
            android:textSize="23sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>





</LinearLayout>